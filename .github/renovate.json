{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "local>USA-RedDragon/renovate-configs",
        "local>USA-RedDragon/renovate-configs:golang",
        "local>USA-RedDragon/renovate-configs:actions-node-version"
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "(^|/)firmware\\/platformio\\.ini$"
            ],
            "matchStrings": [
                "# renovate: v: datasource=(?<datasource>.*?)\\s*?(depName=(?<depNameOverride>.*?))?\\n\\s*?(platform = )?\\s*?(?<depName>[a-zA-Z].+)[@#](?<currentValue>(v?[0-9]+\\.[0-9]+\\.[0-9]+))"
            ],
            "extractVersionTemplate": "^v(?<version>.*)$",
            "depNameTemplate": "{{#if depNameOverride}}{{{depNameOverride}}}{{else}}{{{depName}}}{{/if}}"
        },
        {
            "fileMatch": [
                "(^|/)firmware\\/platformio\\.ini$"
            ],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>.*?)\\s*?(depName=(?<depNameOverride>.*?))?\\s*?\\n(platform = )?\\s*?(?<depName>[a-zA-Z].+)[@#](?<currentValue>(v?[0-9]+\\.[0-9]+\\.[0-9]+))"
            ],
            "depNameTemplate": "{{#if depNameOverride}}{{{depNameOverride}}}{{else}}{{{depName}}}{{/if}}"
        }
    ],
    "packageRules": [
        {
            "matchPackageNames": ["INTI-CMNB/KiBot"],
            "versioning": "regex:v(?<major>\\d+)_k(?<minor>\\d+)$"
        }
    ]
}
